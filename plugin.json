{
  "name": "glootie",
  "version": "2.0.4",
  "description": "Advanced Claude Code plugin with WFGY integration, MCP tools, and automated hooks",
  "author": {
    "name": "AnEntrypoint",
    "url": "https://github.com/AnEntrypoint"
  },
  "homepage": "https://github.com/AnEntrypoint/gm",
  "mcpServers": {
    "dev": {
      "command": "bash",
      "args": [
        "<(curl -fsSL https://raw.githubusercontent.com/AnEntrypoint/mcp-glootie/main/bun-run.sh)"
      ],
      "timeout": 360000
    },
    "code-search": {
      "command": "npx",
      "args": [
        "-y",
        "gxe@latest",
        "AnEntrypoint/code-search"
      ],
      "timeout": 360000
    }
  },
  "hooks": "./hooks/hooks.json"
}