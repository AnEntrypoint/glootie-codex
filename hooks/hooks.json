{
  "description": "Hooks for glootie Codex extension",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CODEX_PLUGIN_ROOT}/pre-tool-use-hook.js",
            "timeout": 3600
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CODEX_PLUGIN_ROOT}/session-start-hook.js",
            "timeout": 10000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CODEX_PLUGIN_ROOT}/prompt-submit-hook.js",
            "timeout": 3600
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CODEX_PLUGIN_ROOT}/stop-hook.js",
            "timeout": 300000
          },
          {
            "type": "command",
            "command": "node ${CODEX_PLUGIN_ROOT}/stop-hook-git.js",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}